                            <!--#endregion -->
                            <!--#region Punto de venta-->
                            <ListViewItem x:Name="ItemListPos" Style="{DynamicResource UiListVoew}" Height="45" Padding="0">
                                <Button Style="{DynamicResource BtnItemBar}" x:Name="BtnLocation" 
                                        Width="197"
                                        Height="45"
                                        Margin="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Cursor="Hand"
                                        Click="PuntoDeVenta">
                                    <Grid HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="137"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" 
                                               Source="../Recursos/Img/Ventas.png"
                                               Width="25"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Punto de Venta"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="left"
                                                   Margin="10 0 0 0"
                                                   Foreground="#FF585858"
                                                   FontWeight="Medium"/>
                                    </Grid>
                                </Button>
                            </ListViewItem>
                            <!--#endregion-->
                            <!--#region Users-->
                            <ListViewItem x:Name="ItemListUsers" Style="{DynamicResource UiListVoew}" Height="45" Padding="0">
                                <Button Style="{DynamicResource BtnItemBar}" x:Name="BtnUsers" 
                                        Width="197"
                                        Height="45"
                                        Margin="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Cursor="Hand"
                                        Click="BtnUsers_Click">
                                    <Grid HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="137"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" 
                                               Source="../Recursos/Img/Users.png"
                                               Width="25"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Listado de usuarios"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="left"
                                                   Margin="10 0 0 0"
                                                   Foreground="#FF585858"
                                                   FontWeight="Medium"/>
                                    </Grid>
                                </Button>
                            </ListViewItem>
                            <!--#endregion-->
                            <!--#region Product-->
                            <ListViewItem x:Name="ItemListProduct" Style="{DynamicResource UiListVoew}" Height="45" Padding="0">
                                <Button Style="{DynamicResource BtnItemBar}" x:Name="BtnProduct" 
                                        Width="197"
                                        Height="45"
                                        Margin="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Cursor="Hand"
                                        Click="BtnProduct_Click">
                                    <Grid HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="137"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" 
                                               Source="../Recursos/Img/Product1.png"
                                               Width="25"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Productos"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="left"
                                                   Margin="10 0 0 0"
                                                   Foreground="#FF585858"
                                                   FontWeight="Medium"/>
                                    </Grid>
                                </Button>
                            </ListViewItem>
                            <!--#endregion-->
                        </ListView>
                        <!--#endregion-->
                    </StackPanel>
                    <!--#endregion -->
                    <!--#region BtnOut-->
                    <Button x:Name="BtnOut"
                            Style="{DynamicResource ButtonStyle1}" 
                            VerticalAlignment="Bottom" 
                            Height="50" Width="65" 
                            Background="Transparent" 
                            Margin="0 0 0 10" 
                            BorderBrush="Transparent" 
                            BorderThickness="0"
                            Click="BtnOut_Click"
                            Cursor="Hand" ToolTip="Cerrar sesion">
                        <Image Source="../Recursos/Img/Out2.png" Width="35" Height="35"/>
                    </Button>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->
                <!--#region Content-->
                <Grid x:Name="GridContent" 
                      Grid.Row="1"
                      PreviewMouseLeftButtonDown="PreviewMouseLeftBottomDownBG">
                    <Border CornerRadius="0 0 10 10" Background="White" Opacity=".95"/>
                    <TextBlock x:Name="TxContent"
                                Text="Desarrollo 2023 - Andrés Marulanda"
                               TextAlignment="Center"
                               VerticalAlignment="BOTTOM"
                               Margin="25"
                               FontSize="12"
                               Foreground="DarkGray"/>
                    <ContentControl Content="{Binding}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="65 0 0 0"/>
                </Grid>
                <!--#endregion-->
            </Grid>
        </Border>
    </Grid>
</Window>
